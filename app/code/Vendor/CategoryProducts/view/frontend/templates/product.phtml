<script>
    require(['jquery', 'Magento_Customer/js/customer-data'], function($, customerData) {
        $(document).on('click', '.add-to-cart-btn', function(e) {
            e.preventDefault();
            var $addToCartBtn = $(this);
            var productId = $addToCartBtn.data('product-id');
            var Sku = $addToCartBtn.data('product-sku');
            var qty = 1;
            checkSalableQuantity(Sku, qty).then(function(isAvailable) {
                if (isAvailable) {
                    var formKey = $('input[name="form_key"]').val();
                    $.ajax({
                        url: '/home/index/AddToCart',
                        method: 'POST',
                        showLoader: true,
                        dataType: 'json',
                        data: {
                            product_id: productId,
                            form_key: formKey,
                            qty: qty
                        },
                        success: function(response) {
                            if (response.success) {
                                reloadCart();
                                setTimeout(function() {
                                    $('.showcart').click();
                                }, 7000);
                                $addToCartBtn.hide();
                                $addToCartBtn.siblings('.quantity-container').css('display', 'flex');
                            } else {
                                alert(response.message); // Show an alert if the addition to cart fails
                            }
                        },
                        error: function(xhr, status, error) {
                            console.error("AJAX Error:", error);
                        }
                    });
                } else {
                    alert("Insufficient stock for this product.");
                }
            }).catch(function(error) {
                console.error("Error checking salable quantity:", error);
            });
        });

        $(document).ready(function() {
            $('.add-to-cart-btn').each(function() {
                var productId = $(this).data('product-id');
                if (isProductInCart(productId)) {
                    $(this).siblings('.quantity-container').css('display', 'flex');
                }
            });
        });

        function isProductInCart(productId) {
            return false;
        }

        function checkSalableQuantity(sku, qty) {
            return new Promise((resolve, reject) => {
                $.ajax({
                    url: '/ajaxshoppingcartupdate/product/getsalablequantity',
                    type: 'GET',
                    data: { sku: sku },
                    success: function(response) {
                        if (response.success) {
                            resolve(qty <= response.salable_quantity);
                        } else {
                            console.error(response.message);
                            reject(response.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error($t("AJAX Error:") + ' ' + status + ' ' + error);
                        console.log(xhr.responseText);
                        reject(error);
                    }
                });
            });
        }

        $(document).on('click', '.increment-btn', function(e) {
            e.preventDefault();
            var $quantityContainer = $(this).closest('.quantity-container');
            var quantity = parseInt($quantityContainer.find('.quantity-value').text());
            quantity += 1; // Increment quantity by 1
            var productId = $quantityContainer.siblings('.add-to-cart-btn').data('product-id');
            var Sku = $quantityContainer.siblings('.add-to-cart-btn').data('product-sku');
            checkSalableQuantity(Sku, quantity).then(function(isAvailable) {
                if (isAvailable) {
                    $quantityContainer.find('.quantity-value').text(quantity);
                    updateQuantity(productId, quantity);
                } else {
                    alert("Insufficient stock to increase quantity.");
                }
            }).catch(function(error) {
                console.error("Error checking salable quantity:", error);
            });
        });

        $(document).on('click', '.decrement-btn', function(e) {
            e.preventDefault();
            var $quantityContainer = $(this).closest('.quantity-container');
            var quantity = parseInt($quantityContainer.find('.quantity-value').text());
            if (quantity > 1) {
                quantity -= 1; // Decrement quantity by 1
                var productId = $quantityContainer.siblings('.add-to-cart-btn').data('product-id');
                var Sku = $quantityContainer.siblings('.add-to-cart-btn').data('product-sku');
                checkSalableQuantity(Sku, quantity).then(function(isAvailable) {
                    if (isAvailable) {
                        $quantityContainer.find('.quantity-value').text(quantity);
                        updateQuantity(productId, quantity);
                    } else {
                        alert("Insufficient stock to decrease quantity.");
                    }
                }).catch(function(error) {
                    console.error("Error checking salable quantity:", error);
                });
            } else {
                // If quantity becomes 0, remove the product from cart
                var productId = $quantityContainer.siblings('.add-to-cart-btn').data('product-id');
                removeFromCart(productId);
            }
        });

        function removeFromCart(productId) {
            var formKey = $('input[name="form_key"]').val();
            $.ajax({
                url: '/home/index/RemoveFromCart',
                method: 'POST',
                showLoader: true,
                dataType: 'json',
                data: {
                    product_id: productId,
                    form_key: formKey
                },
                success: function(response) {
                    reloadCart();
                    $('.add-to-cart-btn[data-product-id="' + productId + '"]').show();
                    $('.add-to-cart-btn[data-product-id="' + productId + '"]').siblings('.quantity-container').css('display', 'none');
                },
                error: function(xhr, status, error) {
                    console.error("Error removing product from cart:", error);
                }
            });
        }

        $(document).on('change', '.quantity-value', function(e) {
            var quantity = parseInt($(this).text());
            if (quantity <= 0 || isNaN(quantity)) {
                $(this).text('1'); // Reset quantity to 1 if invalid or zero
                quantity = 1;
            }
            var $quantityContainer = $(this).closest('.quantity-container');
            var productId = $quantityContainer.siblings('.add-to-cart-btn').data('product-id');
            updateQuantity(productId, quantity);
        });

        function updateQuantity(productId, quantity) {
            var formKey = $('input[name="form_key"]').val();
            $.ajax({
                url: '/home/index/UpdatedCart',
                method: 'POST',
                showLoader: true,
                dataType: 'json',
                data: {
                    product_id: productId,
                    form_key: formKey,
                    qty: quantity
                },
                success: function(response) {
                    reloadCart();
                    $('.showcart').click();
                },
                error: function(xhr, status, error) {
                    console.error("Error updating quantity:", error);
                }
            });
        }

        function reloadCart() {
            var sections = ['cart'];
            customerData.reload(sections, true);
        }
    });
</script>

