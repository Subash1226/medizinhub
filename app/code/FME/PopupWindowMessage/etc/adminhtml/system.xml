<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>        
        <tab id="fmeextensions" translate="label" sortOrder="1">
            <label>Popup</label>
        </tab>
        <section id="popup" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Popupwindowmessage</label>
            <tab>fmeextensions</tab>
            <resource>FME_PopupWindowMessage::configuration</resource>
            <group id="popup_extension" translate="label" type="text" sortOrder="98" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Module Settings</label>
                <field id="popup_mod_enable" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Extension Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>                                               
            </group>                                                   
        </section>
    </system>
</config>
